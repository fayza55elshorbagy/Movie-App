<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="200px"
            android:layout_height="200px"
            android:scaleType="fitXY"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/ic_loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/favItemTitle"/>

        <TextView
            android:id="@+id/favItemTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="kkkkkkkkkkkkkkkkkkkkkkkkkkkk"
            android:textSize="10sp"
            android:singleLine="false"
            android:maxLines="3"
            android:lines="2"
            android:paddingTop="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/itemIcon"
            app:layout_constraintBottom_toTopOf="@id/lini"/>
        <LinearLayout
            android:id="@+id/lini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:gravity="start"
            app:layout_constraintBottom_toTopOf="@id/geners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favItemTitle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/fav_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:paddingTop="2dp"
                android:text="8.9"
                android:textSize="16sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/geners"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="kkkkkkkkkkkkkkkkkkkkkkkkkkkk"
            android:textSize="11sp"
            android:singleLine="false"
            android:maxLines="3"
            android:lines="2"
            android:paddingTop="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lini" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>